{
  "expo": {
    "name": "BerryVision AI",
    "slug": "berryvision-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#111827"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "BerryVision necesita acceso a la cámara para analizar cultivos",
        "NSPhotoLibraryUsageDescription": "BerryVision necesita acceso a la galería para guardar fotos",
        "NSLocationWhenInUseUsageDescription": "BerryVision necesita tu ubicación para geolocalizar análisis"
      }
    },
    "android": {
      "package": "com.cultivovision.berryvision",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#111827"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_MEDIA_VISUAL_USER_SELECTED",
        "android.permission.READ_MEDIA_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir que BerryVision acceda a tu cámara para analizar cultivos"
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Permitir que BerryVision acceda a tu ubicación para geolocalizar análisis"
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Permitir que BerryVision acceda a tus fotos",
          "savePhotosPermission": "Permitir que BerryVision guarde fotos en tu galería"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "341adac6-9fc5-4e35-a6f1-99587e7f99e7"
      }
    }
  }
}
